{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "outDir": "./dist/src",
    "esModuleInterop": true,
    "removeComments": true,
    "isolatedModules": true,
    "declarationMap": true,
    "rootDir": "./src",
    "composite": true
  },

  "include": ["./src"]
}
